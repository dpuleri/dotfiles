" enter the current millenium
set nocompatible

" enable syntax and plugins (for netrw)
syntax enable
filetype plugin on

" tabs are now 4 wide and autoindent
" actually spaces now
set tabstop=4
set shiftwidth=4
set expandtab

" show line numbers
set number

" show column numbers and row numbers
set ruler
set statusline+=%F\ %l
